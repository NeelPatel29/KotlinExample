<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neel.kotlinexample.MainActivity">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="2dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
    <Button
        android:id="@+id/buttonWelcome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:text="Kotlin for Android rocks!"
        android:textColor="#ffffff"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/buttonRecyclerView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:elevation="15dp"
        android:text="RecyclerView Kotlin"
        android:textColor="#ffffff"
        android:layout_margin="10dp"/>

        <Button
            android:id="@+id/buttonBottomNavigation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:elevation="15dp"
            android:text="Bottom Menu Kotlin"
            android:textColor="#ffffff"
            android:layout_margin="10dp"/>

    </LinearLayout>
</ScrollView>

</RelativeLayout>
